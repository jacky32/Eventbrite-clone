<section class="section is-normal">
  <div class="container">
    <div class="columns is-centered">
      <div>
        <h3 class="title">
          <%= @user.name %>'s events
        </h3>
        <div class="columns is-multiline is-centered m-2 box"> 
          <% @organised_events.each do |event| %>
            <div class="column is-narrow is-flex">
              <%= link_to event_url(event.id), class: "box", style: "max-width:420px" do %>
                <h4 class="title is-4">
                  <%= event.name %>
                </h4>
                <p>
                  <%= event.display_date %>
                </p>
                <p>
                  <%= event.description %>
                </p>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>