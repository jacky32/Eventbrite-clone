<div id="confirmation-modal" class="modal">
  <%= link_to '', event_path(@event), class: 'modal-background',
                    data: {
                      turbo: false,
                      controller: "confirmation",
                      action: "click->confirmation#toggleModal"
                    }
      %>
  <div class="modal-card">
    <header class="modal-card-head">
      <p class="modal-card-title">Are you sure you want to delete this event?</p>
      <%= link_to '', event_path(@event), class: 'delete',
                    data: {
                      turbo: false,
                      controller: "confirmation",
                      action: "click->confirmation#toggleModal"
                    }
      %>
    </header>
    <section class="modal-card-body">  
      <div class="field">
        <h3 class="title">
          <%= @event.name %>
        </h3>
      </div>

      <div class="field">
        <p class="is-size-5">
          <%= @event.description %>
        </p>
      </div>
    </section>
    <footer class="modal-card-foot">
      <div class="container">
        <div class="buttons is-grouped is-centered">
          <%= button_to "Destroy", event_path(@event),  
                          method: :delete,
                          class: "button is-danger is-medium" %>
          <%= link_to 'Cancel', event_path(@event), class: 'button is-medium',
                        data: {
                          turbo: false,
                          controller: "confirmation",
                          action: "click->confirmation#toggleModal"
                        } %>
        </div>
      </div>
    </footer>
  </div>
</div>