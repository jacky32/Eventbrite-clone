<div class="column is-narrow is-flex">
  <%= link_to event_url(listed_event.id), class: "box", style: "max-width:420px" do %>
    <h4 class="title is-4 mb-2">
      <%= listed_event.name %>
    </h4>
    <div class="has-text-weight-bold">
      <%= listed_event.display_date %>
    </div>
    <div>
      Organiser:
      <%= listed_event.organiser.name %>
    </div>
    <hr class="my-2">
    <p>
      <%= listed_event.description[0, 250] %>
    </p>
  <% end %>
</div>