<section class="section">
    <div class="container">
      <div class="columns is-centered">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <p class="title">Sign up</p>

          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label :name, class: "label" %>
            <div class="control">
              <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "input is-medium" %>
            </div>
          </div>

          <div class="field">
            <%= f.label :email, class: "label" %>
            <div class="control">
              <%= f.email_field :email, autocomplete: "email", class: "input is-medium" %>
            </div>
          </div>

          <div class="field">
            <%= f.label :password, class: "label" %>
            <%= f.password_field :password, autocomplete: "new-password", class: "input is-medium" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation, class: "label" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input is-medium" %>
          </div>

          <div class="field">
            <div class="control">
              <%= f.submit "Sign up", class: "button is-link" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
</section>